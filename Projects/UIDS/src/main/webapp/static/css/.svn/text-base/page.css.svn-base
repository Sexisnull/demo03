@CHARSET "UTF-8";

html {
	overflow-y: auto;
}

body {
	margin: 0 0 40px 0;
}

#breadcrumb {
	min-width: 960px;
	color: #808080;
	margin: 20px 20px 10px 20px;
}

#breadcrumb i {
	margin-right: 5px;
}

#breadcrumb .separator {
	margin: 0 10px;
}

#page-title {
	min-width: 960px;
	height: 60px;
	/* border-bottom: 1px solid #CCC; */
	margin: 0 20px;
	font-size: 22px;
	line-height: 68px;
}

#page-content {
	min-width: 960px;
	margin: 0 20px;
/* 	padding-top: 20px; */
}

.switchmenu {
	cursor: pointer;
}

.switchmenu i {
	display: none;
}

.panel.datagrid {
	overflow: inherit;
}